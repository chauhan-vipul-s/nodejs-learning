# initialize the npm node project using command
npm init

# first istall the express 
npm i express

# install nodemon as dev dependency 
npm i -D nodemon

# add start command in script of package.json
"start": "node server.js"

# and for development use add this 
"dev": "nodemon server.js"

# for run project in local development
npm run dev

# then follow server.js 

# install a async express handler
npm i express-async-handler

